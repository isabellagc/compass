<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment
        android:id="@+id/resourcesMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="290dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="compass.compass.MapsActivity" />

    <android.support.v7.widget.CardView
        android:id="@+id/clPolice"
        android:layout_width="344dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resourcesMap"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.5">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivCallPolice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_phone_black_24dp" />

            <TextView
                android:id="@+id/tvPolice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:paddingRight="15dp"
                android:text="TextView"
                app:layout_constraintLeft_toRightOf="@+id/ivPolicePin"
                app:layout_constraintTop_toTopOf="@+id/ivPolicePin" />

            <TextView
                android:id="@+id/tvPoliceDistance"
                android:layout_width="74dp"
                android:layout_height="16dp"
                android:paddingRight="15dp"
                android:text="TextView"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/tvPolice"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPolice" />

            <ImageView
                android:id="@+id/ivPolicePin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_location_pin_blue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvCounseling"
        android:layout_width="344dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/clPolice"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCounselingDistance"
                android:layout_width="61dp"
                android:layout_height="20dp"
                android:text="TextView"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCounseling"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/tvCounseling" />

            <TextView
                android:id="@+id/tvCounseling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="TextView"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="@+id/ivCounselingPin"
                app:layout_constraintLeft_toRightOf="@+id/ivCounselingPin"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:id="@+id/ivCallCounseling"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_phone_black_24dp" />

            <ImageView
                android:id="@+id/ivCounselingPin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_location_pin_green" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvHospital"
        android:layout_width="344dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cvCounseling"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvHospitalDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHospital"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/tvHospital" />

            <TextView
                android:id="@+id/tvHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintTop_toTopOf="@+id/ivHospitalPin"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toRightOf="@+id/ivHospitalPin"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:id="@+id/ivHospitalPin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/ic_location_pin_red" />

            <ImageView
                android:id="@+id/ivCallHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_phone_black_24dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>