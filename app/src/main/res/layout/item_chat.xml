<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileOther"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@color/Black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvChatText"
        android:layout_alignEnd="@+id/tvChatText"
        android:layout_alignStart="@+id/tvChatText"
        android:text="TextView"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvChatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivProfileOther"
        android:layout_toEndOf="@+id/ivProfileOther"
        android:layout_toStartOf="@+id/ivProfileMe"
        android:background="@drawable/selector"
        android:backgroundTint="#ECF0F1"
        android:text="TextView"
        android:textColor="@color/Black" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileMe"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tvChatText"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:cropToPadding="false"
        app:srcCompat="@color/c600" />

</RelativeLayout>